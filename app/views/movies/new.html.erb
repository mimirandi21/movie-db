<%= form_with model: @movie do |form| %>
Movie:
    <%= form.label :name %>
    <%= form.text_field :name %>
    <br>

    <%= form.fields_for :user_movies do |User_movie_form| %>
    
        <%= user_movie_form.label :source %>
        <%= user_movie_form.text_field :source %>
        <br>

        <%= user_movie_form.label :user_rating %>
        <%= user_movie_form.number_field :user_rating %>
        <br>
        
        <%= user_movie_form.label :user_notes %>
        <%= user_movie_form.text_area :user_notes %>
        <br>

        <%= user_movie_form.label :private_notes %>
        <%= user_movie_form.text_area :private_notes %>
        <br>

    <% end %>

    <%= form.submit %>

<% end %>