<% if logged_in? %>
    <% @movie.each do |movie| %>
        <%= movie.poster %>
        <%= link_to movie.name, user_movie_path(@user) %>
        <%= movie.year %>
        <%= movie.plot %>
    <%= end %>
<% else %>
    <% @movie.each do |movie| %>
        <%= movie.poster %>
        <%= link_to movie.name, movie_path(movie) %>
        <%= movie.year %>
        <%= movie.plot %>
    <%= end %>
<% end %>