<% if logged_in %>
    <h2><%= @genre.name %></h2>

    <h4>All <%= @genre.name %> movies.</h4>
    <ul><% @genre.movies.each do |movie| %>
        <%= link_to movie.name, movie_path(movie) %></li>
    <% end %></ul>

    <h4>Your <%= @genre.name %> movies.</h4>
    <ul><% @genre.movies.each do |movie| %>
        <%= link_to movie.name, user_collection_path(current_user, movie) %></li>
    <% end %></ul>  

<% else %>

    <h2><%= @genre.name %></h2>

    <ul><% @genre.movies.each do |movie| %>
        <li><%= link_to movie.name, movie_path(movie) %></li>
    <% end %></ul>

<% end %>